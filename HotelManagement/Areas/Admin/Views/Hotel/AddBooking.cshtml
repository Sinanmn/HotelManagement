@model AddBookingModel
@{
    ViewData["Title"] = "AddUser";
    Layout = "~/Areas/Admin/Views/Shared/_layout3.cshtml";
}
<h1>Payment through Bkash(01811111111)</h1>
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a class="nav-link"href="Index">Home</a></li>
                    <li class="breadcrumb-item active">Add Booking</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 ">

            </div>
            <div class="col-md-8">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Add A New Booking</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post" asp-controller="Hotel"
                          asp-action="AddBooking" asp-antiforgery="true">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="UserId" class="col-sm-2 col-form-label">User Id</label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" asp-for="UserId"
                                           id="userid" placeholder="User Id">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="BDate" class="col-sm-2 col-form-label">Booking Date</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="BDate" class="form-control"
                                           id="BookingDate" placeholder="bdate">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="BRoom" class="col-sm-2 col-form-label">Room Type</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="BRoom" class="form-control"
                                           id="broom" placeholder="Room Type">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="CheckIn" class="col-sm-2 col-form-label">Check In</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="CheckIn" class="form-control"
                                           id="checkin" placeholder="Check In">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="CheckOut" class="col-sm-2 col-form-label">Check Out</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="CheckOut" class="form-control"
                                           id="checkout" placeholder="CheckOut">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Amount" class="col-sm-2 col-form-label">Amount</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Amount" class="form-control"
                                           id="amount" placeholder="amount">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="TransactionId" class="col-sm-2 col-form-label">Transaction Id</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="TransactionId" class="form-control"
                                           id="transactionid" placeholder="TransactionId">
                                </div>
                            </div>

                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Add</button>
                            <a asp-action="Index" asp-controller="Hotel"
                               class="btn btn-default float-right">Cancel</a>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



