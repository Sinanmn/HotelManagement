@model EditUserModel
@{
    ViewData["Title"] = "EditUser";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit An Existing User's Profile</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a class="nav-link"href="Index">Home</a></li>
                    <li class="breadcrumb-item active">Add User</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Edit An Existing User's Profile</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post" asp-controller="Hotel"
                          asp-action="EditUser" asp-antiforgery="true">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="card-body">

                            <div class="form-group row">
                                <label asp-for="UName" class="col-sm-2 col-form-label">User Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="UName"
                                           id="title" placeholder="User Name">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="UPhone" class="col-sm-2 col-form-label">Contract</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="UPhone" class="form-control"
                                           id="phone" placeholder="Phone">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="UEmail" class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="UEmail" class="form-control"
                                           id="email" placeholder="Email">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="UPass" class="col-sm-2 col-form-label">Password</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="UPass" class="form-control"
                                           id="password" placeholder="PassWord">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="UAddress" class="col-sm-2 col-form-label">Address</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="UAddress" class="form-control"
                                           id="address" placeholder="Address">
                                </div>
                            </div>

                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Edit</button>
                            <a asp-action="ManageUser" asp-controller="Hotel"
                               class="btn btn-default float-right">Back</a>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



